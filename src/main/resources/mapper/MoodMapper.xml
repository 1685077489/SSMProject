<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wt.dao.MoodDao">
    <resultMap id="Mood" type="com.wt.model.Mood">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="publish_time" jdbcType="TIMESTAMP" property="publishTime"/>
        <result column="praise_num" jdbcType="INTEGER" property="praiseNum"/>
    </resultMap>
    <select id="findAll" resultMap="Mood">
        select * from mood
    </select>
    <select id="findMoodByMoodId" resultMap="Mood" parameterType="Integer">
        select * from mood where id=#{id}
    </select>
    <update id="updateMood" parameterType="com.wt.model.Mood">
        update mood set content =#{content},user_id=#{userId},publish_time=#{publishTime},praise_num=#{praiseNum} where id=#{id}
    </update>
    <insert id="addMood" parameterType="com.wt.model.Mood">
        insert into mood values (null,#{content},#{userId},#{publishTime},#{praiseNum})
    </insert>
</mapper>