<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wt.dao.UserMoodPraiseRelDao">
    <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="com.wt.model.UserMoodPraiseRel">
        insert into user_mood_praise_rel (user_id,mood_id) value (#{userMoodPraiseRel.userId},#{userMoodPraiseRel.moodId})
    </insert>
    <select id="getallPraiseUserIdByMoodId" parameterType="int" resultType="int">
        select distinct user_id from user_mood_praise_rel where mood_id=#{id};
    </select>
    <select id="getallPraiseUsernameById" resultType="String" parameterType="List">
        select account from user where 1=2
         <if test="list != null and list.size() > 0">
             or id in
             <foreach collection="list" index="index" item="item" open="("
                      separator="," close=")">
                 #{item}
             </foreach>
         </if>
    </select>
    <delete id="deletepraise" >
        DELETE FROM user_mood_praise_rel WHERE user_id = #{userid} and mood_id = #{moodid};
    </delete>
</mapper>